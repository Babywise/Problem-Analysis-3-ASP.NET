@model List<Vendor>
@{
    ViewData["Title"] = "Vendor Page";
}

<div class="text-center">
    <h1 class="display-4">Vendors</h1>
    <form id="vendorAddRequest" asp-controller="Vendor" asp-action="Add">
        <button class="btn btn-primary" type="submit" onclick="event.preventDefault(); document.getElementById('vendorAddRequest').submit();">
            Add
        </button>
    </form>
</div>
<div>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col" class="text-nowrap">#</th>
                <th scope="col" class="text-nowrap">Name</th>
                <th scope="col" class="text-nowrap">Province<br>Or State</th>
                <th scope="col" class="text-nowrap">Zip Or<br>Postal Code</th>
                <th scope="col" class="text-nowrap">Vendor Phone</th>
                <th scope="col" class="text-nowrap">Vendor Contact<br>Last Name</th>
                <th scope="col" class="text-nowrap">Vendor Contact<br>First Name</th>
                <th scope="col" class="text-nowrap">Vendor Contact Email</th>
                <th scope="col"><br></th>
                <th scope="col"><br></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                @for(int i = 0; i < Model.Count; i++)
                {
                    
                    <tr scope="row">
                        <td>@(i + 1)</td>
                        <td>@Model.ElementAt(i).Name</td>
                        <td>@Model.ElementAt(i).ProvinceOrState</td>
                        <td>@Model.ElementAt(i).ZipOrPostalCode</td>
                        <td class="text-nowrap">@Model.ElementAt(i).VendorPhone</td>
                        <td>@Model.ElementAt(i).VendorContactLastName</td>
                        <td>@Model.ElementAt(i).VendorContactFirstName</td>
                        <td>@Model.ElementAt(i).VendorContactEmail</td>
                        <td>
                            <form id="vendorEditRequest" asp-controller="Vendor" asp-action="Edit" asp-route-vendor="@Model.ElementAt(i).VendorId">
                                <button class="btn btn-outline-primary" type="submit" onclick="event.preventDefault(); document.getElementById('vendorEditRequest').submit();">
                                    Edit
                                </button>
                            </form>
                        </td>
                        <td>
                            <form id="vendorInvoicesRequest" asp-controller="Vendor" asp-action="Invoices" asp-route-id="@Model.ElementAt(i).VendorId">
                                <button class="btn btn-outline-primary" type="submit" onclick="event.preventDefault(); document.getElementById('vendorInvoicesRequest').submit();">
                                    Invoices
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
