@model Vendor
@{
    ViewData["Title"] = "Add Vendor";
}
<div class="container">
    <div class="d-flex p-1">
        <div class="flex-fill p-2">
            <h4 class="float-end"><b><a asp-controller="Vendor" asp-action="GetVendorList">Return to Vendor List</a></b></h4>
        </div>
    </div>
</div>
<div class="text-center vertical-align">
    <h1 class="display-4">@Model.Name</h1>

</div>
<div class="center">
    <form asp-controller="Vendor" asp-action="AddVendor" method="post" enctype="application/x-www-form-urlencoded">
        <partial name="_VendorFormFieldsPartial" model="@Model" />

        <div class="d-flex">
            <div class="col-sm-3 mx-auto">
                <button type="submit" class="btn btn-primary">Add</button>
                <a asp-controller="Vendor" asp-action="GetVendorList" class="btn btn-primary">Cancel</a>
            </div>
        </div>
    </form>
</div>