@model VendorRequest
@{
    ViewData["Title"] = $"Editing: {Model.Name}";
}
<div class="container">
    <div class="d-flex p-1">
        <div class="flex-fill p-2">
            <h4 class="float-end"><b><a asp-controller="Vendor" asp-action="GetVendorList">Return to Vendor List</a></b></h4>
        </div>
    </div>
</div>
<div class="bg-light rounded p-5 mx-auto col-sm-10">
    <form asp-controller="Vendor" asp-action="UpdateVendor" asp-route-id="@Model.VendorId" method="post" enctype="application/x-www-form-urlencoded">

        <partial name="_VendorFormFieldsPartial" model="@Model" />

        <div class="form-group row align-items-center text-nowrap">
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Save Changes</button>
                <a asp-controller="Vendor" asp-action="GetVendorList" class="btn btn-primary">Cancel</a>
            </div>
        </div>
    </form>
</div>