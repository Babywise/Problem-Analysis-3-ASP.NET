@model Vendor

<!-- placeholder for validn errs if there are any: -->
<div class="text-danger" asp-validation-summary="All"></div>

<!-- We are binding this input field to the Name prop on the Movie object that is our model -->
<div class="form-group row">
    <div class="col-sm-3 mx-auto"><label asp-for="Name">Name</label></div>
    <div class="col-sm-4 mx-auto"><input type="text" asp-for="Name" class="form-control" /></div>
</div>

<div class="form-group row">
    <div class="col-sm-3 mx-auto"><label asp-for="Address1">Address 1</label></div>
    <div class="col-sm-4 mx-auto"><input type="text" asp-for="Address1" class="form-control" /></div>
</div>
<div class="form-group row">
    <div class="col-sm-3 mx-auto"><label asp-for="Address2">Address 2</label></div>
    <div class="col-sm-4 mx-auto"><input type="text" asp-for="Address2" class="form-control" /></div>
</div>
<div class="form-group row">
    <div class="col-sm-3 mx-auto"><label asp-for="City">Name</label></div>
    <div class="col-sm-4 mx-auto"><input type="text" asp-for="City" class="form-control" /></div>
</div>
<div class="form-group row">
    <div class="col-sm-3 mx-auto"><label asp-for="ProvinceOrState">Province Or State</label></div>
    <div class="col-sm-4 mx-auto"><input type="text" asp-for="ProvinceOrState" class="form-control" /></div>
</div>
<div class="form-group row">
    <div class="col-sm-3 mx-auto"><label asp-for="ZipOrPostalCode">Zip Or Postal Code</label></div>
    <div class="col-sm-4 mx-auto"><input type="text" asp-for="ZipOrPostalCode" class="form-control" /></div>
</div>
<div class="form-group row">
    <div class="col-sm-3 mx-auto"><label asp-for="VendorPhone">Vendor Phone</label></div>
    <div class="col-sm-4 mx-auto"><input type="text" asp-for="VendorPhone" class="form-control" /></div>
</div>
<div class="form-group row">
    <div class="col-sm-3 mx-auto"><label asp-for="VendorContactLastName">Vendor Contact Last Name</label></div>
    <div class="col-sm-4 mx-auto"><input type="text" asp-for="VendorContactLastName" class="form-control" /></div>
</div>
<div class="form-group row">
    <div class="col-sm-3 mx-auto"><label asp-for="VendorContactFirstName">Vendor Contact First Name</label></div>
    <div class="col-sm-4 mx-auto"><input type="text" asp-for="VendorContactFirstName" class="form-control" /></div>
</div>
<div class="form-group row">
    <div class="col-sm-3 mx-auto"><label asp-for="VendorContactEmail">Vendor Contact Email</label></div>
    <div class="col-sm-4 mx-auto"><input type="text" asp-for="VendorContactEmail" class="form-control" /></div>
</div>